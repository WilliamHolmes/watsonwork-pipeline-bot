{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ["last 3 versions"]
      },
      "useBuiltIns": true
    }],
    "stage-0",
    "react"
  ],
  "compact": true,
  "env": {
    "development": {
      "sourceMaps": true,
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "test": {
      "plugins": [
        ["istanbul", {
          "exclude": [
            "**/*.spec.js",
            "**/*.svg",
            "tests/unit/*.*"
          ]
        }]
      ]
    }
  },
  "plugins": [
    ["transform-runtime", {
      "polyfill": false
    }]
  ]
}
